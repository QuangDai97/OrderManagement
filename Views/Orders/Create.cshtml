@model OrderManagement.Models.Order
@{
    ViewData["Title"] = "Create Order";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        padding-top: 20px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label.control-label {
        font-weight: bold;
        width: 150px; /* Adjust label width */
        display: inline-block;
    }

    input[type="text"],
    input[type="date"],
    textarea {
        width: calc(100% - 110px); /* Adjust input/textarea width */
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    textarea {
        resize: vertical; /* Allow vertical resize */
    }

    .btn {
        padding: 8px 20px;
        font-size: 14px;
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .text-danger {
        color: #dc3545;
    }

    a {
        color: white;
        text-decoration: none;
    }

    input {
        height: 25px;
        width: 250px !important;
    }

    textarea {
        height: 80px;
        width: 50% !important;
    }

</style>

<h1 class="text-center">Create Order</h1>
<div class="container">
    <form method="post" action="/Orders/Create">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="OrderNo" class="control-label text-danger">Order No *</label>
                    <input id="OrderNo" name="OrderNo" type="text" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.OrderNo, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="OrderDate" class="control-label text-danger">Order Date *</label>
                    <input id="OrderDate" name="OrderDate" required class="form-control" type="date" />
                    @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="DeptCode" class="control-label text-danger">Department Code *</label>
                    <input id="DeptCode" name="DeptCode" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.DeptCode, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="CustCode" class="control-label text-danger">Customer Code *</label>
                    <input id="CustCode" name="CustCode" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.CustCode, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="CustSubNo" class="control-label">Cust Sub No</label>
                    <input id="CustSubNo" name="CustSubNo" type="number" class="form-control" />
                    @Html.ValidationMessageFor(model => model.CustSubNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label for="EmpCode" class="control-label text-danger">Employee Code *</label>
                    <input id="EmpCode" name="EmpCode" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.EmpCode, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="RequiredDate" class="control-label">Required Date</label>
                    <input id="RequiredDate" name="RequiredDate" class="form-control" type="date" />
                    @Html.ValidationMessageFor(model => model.RequiredDate, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="CustOrderNo" class="control-label">Customer Order No</label>
                    <input id="CustOrderNo" name="CustOrderNo" class="form-control" />
                    @Html.ValidationMessageFor(model => model.CustOrderNo, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="WhCode" class="control-label text-danger">Warehouse Code *</label>
                    <input id="WhCode" name="WhCode" required class="form-control" />
                    @Html.ValidationMessageFor(model => model.WhCode, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="CmpTax" class="control-label text-danger">Company Tax *</label>
                    <input id="CmpTax" name="CmpTax" required type="number" class="form-control" />
                    @Html.ValidationMessageFor(model => model.CmpTax, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="form-group" style="margin-left: 26%;">
            <label for="SlipComment" class="control-label">Slip Comment</label>
            <textarea id="SlipComment" name="SlipComment" class="form-control"></textarea>
            @Html.ValidationMessageFor(model => model.SlipComment, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" style="margin-left: 26%;">
            <input type="submit" style="height: 38px;width: 132px !important;" value="Create" class="btn btn-primary" />
            <a href="/Orders" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
