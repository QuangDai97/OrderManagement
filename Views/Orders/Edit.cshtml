@model OrderManagement.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        padding-top: 20px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label.control-label {
        font-weight: bold;
        width: 150px; /* Adjust label width */
        display: inline-block;
    }

    input[type="text"],
    input[type="date"],
    textarea {
        width: calc(100% - 110px); /* Adjust input/textarea width */
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    textarea {
        resize: vertical; /* Allow vertical resize */
    }

    .btn {
        padding: 8px 20px;
        font-size: 14px;
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .text-danger {
        color: #dc3545;
    }

    a {
        color: white;
        text-decoration: none;
    }

    input {
        height: 25px;
        width: 250px !important;
    }

    textarea {
        height: 80px;
        width: 50% !important;
        
    }

</style>

<h1 style="text-align:center">Edit Order</h1>
<div class="container">

    <form method="post" action="/Orders/Edit">
        @Html.AntiForgeryToken()
        <div class="row" style="margin:auto">
            <div class="col-md-3"></div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="OrderNo" class="control-label text-danger">Order No *</label>
                    <input asp-for="OrderNo" name="OrderNo" class="form-control" readonly value="@Model.OrderNo" />
                    <span asp-validation-for="OrderNo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="OrderDate" class="control-label text-danger">Order Date *</label>
                    <input asp-for="OrderDate" type="date" name="OrderDate" required class="form-control" value="@Model.OrderDate.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeptCode" class="control-label text-danger">Department Code *</label>
                    <input asp-for="DeptCode" name="DeptCode" required class="form-control" value="@Model.DeptCode" />
                    <span asp-validation-for="DeptCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CustCode" class="control-label text-danger">Customer Code *</label>
                    <input asp-for="CustCode" name="CustCode" required class="form-control" value="@Model.CustCode" />
                    <span asp-validation-for="CustCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CustSubNo" class="control-label">Cust Sub No</label>
                    <input asp-for="CustSubNo" name="CustSubNo" type="number" class="form-control" value="@Model.CustSubNo" />
                    <span asp-validation-for="CustSubNo" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-3">

                <div class="form-group">
                    <label asp-for="EmpCode" class="control-label text-danger">Employee Code *</label>
                    <input asp-for="EmpCode" name="EmpCode" required class="form-control" value="@Model.EmpCode" />
                    <span asp-validation-for="EmpCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RequiredDate" class="control-label">Required Date</label>
                    <input asp-for="RequiredDate" name="RequiredDate" type="date" class="form-control" value="@Model.RequiredDate" />
                    <span asp-validation-for="RequiredDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CustOrderNo" class="control-label">Customer Order No</label>
                    <input asp-for="CustOrderNo" name="CustOrderNo" class="form-control" value="@Model.CustOrderNo" />
                    <span asp-validation-for="CustOrderNo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="WhCode" class="control-label text-danger">Warehouse Code *</label>
                    <input asp-for="WhCode" name="WhCode" required class="form-control" value="@Model.WhCode" />
                    <span asp-validation-for="WhCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CmpTax" class="control-label text-danger">Company Tax *</label>
                    <input asp-for="CmpTax" name="CmpTax" type="number" required class="form-control" value="@Model.CmpTax" />
                    <span asp-validation-for="CmpTax" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>

        <div class="form-group" style="margin-left:26%">
            <label asp-for="SlipComment" class="control-label">Slip Comment</label>
            <textarea asp-for="SlipComment" name="SlipComment" class="form-control" >@Model.SlipComment</textarea>
            <span asp-validation-for="SlipComment" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-left:26%">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/Orders" class="btn btn-secondary">Back to List</a>
        </div>
    </form>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
