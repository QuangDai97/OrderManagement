@model IEnumerable<OrderManagement.Models.Order>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        padding-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        background-color: #fff;
        margin-bottom: 20px;
        border: 1px solid #dee2e6;
    }

        .table th,
        .table td {
            padding: 8px;
            text-align: center;
            vertical-align: middle;
        }

        .table th {
            background-color: #007bff;
            color: #fff;
        }

        .table td {
            border-top: 1px solid #dee2e6;
        }

    .btn {
        padding: 6px 12px;
        font-size: 14px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

    a {
        color: white;
        text-decoration: none;
    }

    input {
        height: 25px;
    }
</style>

<h1 style="text-align:center ; margin-bottom:30px">Order List</h1>
<div style="margin:auto; width:90%">

    <div class="row" style="align-items:center;">
        <div class="col-md-10">
            <form method="get" asp-action="Index">
                <div class="row" style="align-items:center">
                    <div class="form-group col-md-3">
                        <label>Search text</label>
                        <input type="text" name="search" class="form-control" />
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="startDate">Order Date From</label>
                        <input type="date" name="startDate" class="form-control" />
                    </div>
                    <div class="form-group col-md-3">
                        <label asp-for="endDate">Order Date To</label>
                        <input type="date" name="endDate" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary" style="color:white; height:34px; margin-top:10px;">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">
            <a href="@Url.Action("Create", "Orders")" class="btn btn-primary">Create New</a>
            <a href="@Url.Action("Statistics", "Orders")" class="btn btn-info">Statistics</a>
        </div>

    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <table class="table" style="margin-top:20px">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OrderNo)</th>
                <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                <th>@Html.DisplayNameFor(model => model.DeptCode)</th>
                <th>@Html.DisplayNameFor(model => model.CustCode)</th>
                <th>@Html.DisplayNameFor(model => model.EmpCode)</th>
                <th>@Html.DisplayNameFor(model => model.WhCode)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderNo</td>
                    <td>@item.OrderDate</td>
                    <td>@item.DeptCode</td>
                    <td>@item.CustCode</td>
                    <td>@item.EmpCode</td>
                    <td>@item.WhCode</td>
                    <td>
                        <a href="@Url.Action("Edit", "Orders", new { id = item.OrderNo })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Index", "OrderDetails", new { parentId = item.OrderNo })" class="btn btn-primary">View Detail</a>
                        <a href="@Url.Action("Delete", "Orders", new { OrderNo = item.OrderNo })" class="btn btn-outline-danger" style="background:red; color:white">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>

