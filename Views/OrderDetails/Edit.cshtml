@model OrderManagement.Models.OrderDetail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>OrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" action="/OrderDetails/Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Các trường dữ liệu -->
            <input type="hidden" asp-for="OrderNo" />
            <input type="hidden" asp-for="SoRowNo" />

            <div class="form-group">
                <label asp-for="ProdCode" class="control-label"></label>
                <div class="form-row">
                    <label for="ProdCode" class="col-sm-3 col-form-label">ProdCode:</label>
                    <div class="col-sm-9">
                        <input asp-for="ProdCode" class="form-control" id="ProdCode" name="ProdCode" value="@Model.ProdCode" />
                        <span asp-validation-for="ProdCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ProdName" class="control-label"></label>
                <div class="form-row">
                    <label for="ProdName" class="col-sm-3 col-form-label">ProdName:</label>
                    <div class="col-sm-9">
                        <input asp-for="ProdName" class="form-control" id="ProdName" name="ProdName" value="@Model.ProdName" />
                        <span asp-validation-for="ProdName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <div class="form-row">
                    <label for="UnitPrice" class="col-sm-3 col-form-label">UnitPrice:</label>
                    <div class="col-sm-9">
                        <input asp-for="UnitPrice" class="form-control" id="UnitPrice" name="UnitPrice" value="@Model.UnitPrice" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <div class="form-row">
                    <label for="Quantity" class="col-sm-3 col-form-label">Quantity:</label>
                    <div class="col-sm-9">
                        <input asp-for="Quantity" class="form-control" id="Quantity" name="Quantity" value="@Model.Quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CmpTaxRate" class="control-label"></label>
                <div class="form-row">
                    <label for="CmpTaxRate" class="col-sm-3 col-form-label">CmpTaxRate:</label>
                    <div class="col-sm-9">
                        <input asp-for="CmpTaxRate" class="form-control" id="CmpTaxRate" name="CmpTaxRate" value="@Model.CmpTaxRate" />
                        <span asp-validation-for="CmpTaxRate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ReserveQty" class="control-label"></label>
                <div class="form-row">
                    <label for="ReserveQty" class="col-sm-3 col-form-label">ReserveQty:</label>
                    <div class="col-sm-9">
                        <input asp-for="ReserveQty" class="form-control" id="ReserveQty" name="ReserveQty" value="@Model.ReserveQty" />
                        <span asp-validation-for="ReserveQty" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryOrderQty" class="control-label"></label>
                <div class="form-row">
                    <label for="DeliveryOrderQty" class="col-sm-3 col-form-label">DeliveryOrderQty:</label>
                    <div class="col-sm-9">
                        <input asp-for="DeliveryOrderQty" class="form-control" id="DeliveryOrderQty" name="DeliveryOrderQty" value="@Model.DeliveryOrderQty" />
                        <span asp-validation-for="DeliveryOrderQty" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DeliveredQty" class="control-label"></label>
                <div class="form-row">
                    <label for="DeliveredQty" class="col-sm-3 col-form-label">DeliveredQty:</label>
                    <div class="col-sm-9">
                        <input asp-for="DeliveredQty" class="form-control" id="DeliveredQty" name="DeliveredQty" value="@Model.DeliveredQty" />
                        <span asp-validation-for="DeliveredQty" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CompleteFlg" class="control-label"></label>
                <div class="form-row">
                    <label for="CompleteFlg" class="col-sm-3 col-form-label">CompleteFlg:</label>
                    <div class="col-sm-9">
                        <input asp-for="CompleteFlg" class="form-control" id="CompleteFlg" name="CompleteFlg" value="@Model.CompleteFlg" />
                        <span asp-validation-for="CompleteFlg" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <div class="form-row">
                    <label for="Discount" class="col-sm-3 col-form-label">Discount:</label>
                    <div class="col-sm-9">
                        <input asp-for="Discount" class="form-control" id="Discount" name="Discount" value="@Model.Discount" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <div class="form-row">
                    <label for="DeliveryDate" class="col-sm-3 col-form-label">DeliveryDate:</label>
                    <div class="col-sm-9">
                        <input asp-for="DeliveryDate" class="form-control" id="DeliveryDate" name="DeliveryDate" value="@Model.DeliveryDate.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="UpdateDate" class="control-label"></label>
                <div class="form-row">
                    <label for="UpdateDate" class="col-sm-3 col-form-label">UpdateDate:</label>
                    <div class="col-sm-9">
                        <input asp-for="UpdateDate" class="form-control" id="UpdateDate" name="UpdateDate" value="@Model.UpdateDate.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="UpdateDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Updater" class="control-label"></label>
                <div class="form-row">
                    <label for="Updater" class="col-sm-3 col-form-label">Updater:</label>
                    <div class="col-sm-9">
                        <input asp-for="Updater" class="form-control" id="Updater" name="Updater" value="@Model.Updater" />
                        <span asp-validation-for="Updater" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        padding-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .col-form-label {
        font-weight: bold;
        margin-right: 10px;
    }

    input[type="text"],
    input[type="date"],
    textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .btn {
        padding: 8px 20px;
        font-size: 14px;
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .text-danger {
        color: #dc3545;
    }
</style>
