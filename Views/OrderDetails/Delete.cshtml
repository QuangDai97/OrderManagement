@model OrderManagement.Models.OrderDetail

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<form method="post" action="/OrderDetails/Delete">
        @Html.AntiForgeryToken()
    <input type="hidden" name="OrderNo" value="@Model.OrderNo" />
    <input type="hidden" name="SoRowNo" value="@Model.SoRowNo" />
        <input type="submit" value="Delete" class="btn" style="border:none;margin-right:5px; background-color:red" /> 
    <a href="@Url.Action("Index", "OrderDetails", new { parentId = @Model.OrderNo })" class="btn  btn-secondary">Back to list</a>
    </form>
